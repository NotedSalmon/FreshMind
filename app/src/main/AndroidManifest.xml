            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>


        <activity android:name=".Authentication.User_Register"/>
        <activity android:name=".UI.Starter"
            android:theme="@style/Theme.Default_FreshMind.NoActionBar"/>
        <activity android:name=".UI.Task.TaskList_AddTask" />
        <activity android:name=".UI.Task.TaskList_EditTask" />
        <activity android:name=".UI.Notes.Notes_AddNote" />
        <activity android:name=".UI.Notes.Notes_EditNote" />


