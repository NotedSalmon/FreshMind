<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Transparent Circle Outline -->
    <item>
        <shape android:shape="oval">
            <stroke
                android:width="10dp"
                android:color="#FF0000" />
            <size
                android:width="100dp"
                android:height="100dp" />
        </shape>
    </item>

    <!-- White X -->
    <item android:top="25dp" android:right="25dp" android:bottom="25dp" android:left="25dp">
        <rotate
            android:fromDegrees="45"
            android:toDegrees="45"
            android:pivotX="50%"
            android:pivotY="50%">
            <shape android:shape="line">
                <stroke
                    android:width="12dp"
                    android:color="#FF0000" />
            </shape>
        </rotate>
    </item>
    <item android:top="25dp" android:right="25dp" android:bottom="25dp" android:left="25dp">
        <rotate
            android:fromDegrees="-45"
            android:toDegrees="-45"
            android:pivotX="50%"
            android:pivotY="50%">
            <shape android:shape="line">
                <stroke
                    android:width="12dp"
                    android:color="#FF0000" />
            </shape>
        </rotate>
    </item>
</layer-list>
