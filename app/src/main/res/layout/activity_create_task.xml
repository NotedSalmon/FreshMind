<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/txtTitleCreateTask"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="44dp"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="44dp"
        android:fontFamily="@font/allerta_stencil"
        android:text="Create Task"
        android:textColor="#642888"
        android:textSize="25sp"
        android:textStyle="bold"
        android:typeface="sans"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/txtCreateTask_Title"
        android:layout_width="360dp"
        android:layout_height="49dp"
        android:layout_marginStart="4dp"
        android:textAlignment="center"
        android:layout_marginTop="172dp"
        android:hint="Task Title"
        android:inputType="text"
        android:minHeight="48dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/txtCreateTask_Description"
        android:layout_width="350dp"
        android:layout_height="49dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="40dp"
        android:hint="Task Description"
        android:inputType="textMultiLine"
        android:minHeight="48dp"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.456"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtCreateTask_Title" />

    <TextView
        android:id="@+id/txtCreateTask_StartDate"
        android:layout_width="350dp"
        android:layout_height="25dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="40dp"
        android:hint="Start Date"
        android:textAlignment="center"
        android:minHeight="24dp"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtCreateTask_Description" />

    <TextView
        android:id="@+id/txtCreateTask_EndDate"
        android:layout_width="350dp"
        android:layout_height="25dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="40dp"
        android:hint="End Date"
        android:minHeight="24dp"
        android:textAlignment="center"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtCreateTask_StartDate" />

    <Button
        android:id="@+id/buttonSaveTask"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:text="Save Task"
        android:onClick="btnAddTask"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtCreateTask_EndDate" />

</androidx.constraintlayout.widget.ConstraintLayout>
