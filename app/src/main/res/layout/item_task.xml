<!-- item_task.xml -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:padding="8dp">

    <TextView
        android:id="@+id/txtTask_Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@id/icon_DeleteTask"
        android:textSize="18sp"
        android:textStyle="bold"
        tools:text="@tools:sample/full_names" />

    <ImageView
        android:id="@+id/icon_DeleteTask"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="0dp"
        android:clickable="true"
        app:srcCompat="@drawable/drawable_delete" />

    <TextView
        android:id="@+id/txtTask_Description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtTask_Title"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@id/icon_EditTask"
        android:textColor="@color/lightGray"
        android:textSize="14sp"
        tools:text="@tools:sample/lorem" />

    <ImageView
        android:id="@+id/icon_EditTask"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:layout_below="@id/txtTask_Title"
        android:layout_alignParentRight="true"
        android:layout_marginRight="0dp"
        android:clickable="true"
        app:srcCompat="@drawable/import_edit" />

    <TextView
        android:id="@+id/txtTask_StartDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtTask_Description"
        android:layout_alignParentStart="true"
        android:textColor="@color/lightGray"
        android:textSize="14sp"
        tools:text="@tools:sample/date/mmddyy" />

    <TextView
        android:id="@+id/txtTask_EndDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtTask_Description"
        android:layout_marginStart="20dp"
        android:layout_marginTop="0dp"
        android:layout_toEndOf="@id/txtTask_StartDate"
        android:textColor="@color/lightGray"
        android:textSize="14sp"
        tools:text="@tools:sample/date/mmddyy" />

    <TextView
        android:id="@+id/txtTask_Seperator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtTask_Description"
        android:layout_marginStart="6dp"
        android:layout_marginTop="0dp"
        android:layout_toEndOf="@id/txtTask_StartDate"
        android:text="--"
        android:textColor="@color/lightGray"
        android:textSize="14sp" />


</RelativeLayout>
